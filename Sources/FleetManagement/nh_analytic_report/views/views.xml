<odoo>
    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">nh_analytic_report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="account_ids"/>
                </group>
                <footer>
                    <button name="print_pdf" type="object" string="Export to PDF" class="oe_highlight"/>
                    or
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="launch_report_wizard" model="ir.actions.act_window">
        <field name="name">Analytic Balance</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">nh_analytic_report.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_form_view"/>
        <field name="target">new</field>
    </record>

    <menuitem id="wizard" name="Analytic Balance"
              parent="account.account_reports_management_menu"
              action="launch_report_wizard"/>
</odoo>