<odoo>

    <record model="ir.ui.view" id="daily_trip_wizard_view">
        <field name="name">daily_trip_wizard.form</field>
        <field name="model">fleet_tracking.daily_trip_wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="vehicle_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="display_trip" string="Get Daily Trip" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>